<!DOCTYPE html>
<html>
<head>
  {{!-- Document Settings --}}
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <base
    href="/"></head>

  {{!-- Page Meta --}}
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />

  {{!-- Mobile Meta --}}
  <meta name="HandheldFriendly" content="True" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  {{!-- Brand icon --}}
  <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

  {{!-- Styles'n'Scripts --}}
  <link rel="stylesheet" type="text/css" href="/splashscreen.css" />
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Merriweather:300,700,700italic,300italic|Open+Sans:700,400" />

  {{!-- Ghost outputs important style and meta data with this tag --}}
  {{ghost_head}}
</head>
<body
  aurelia-app="main"
  class="{{body_class}} nav-closed"
  data-blog-url="{{@blog.url}}"
  data-blog-title="{{@blog.title}}"
  data-blog-description="{{@blog.description}}"
  data-blog-logo="{{@blog.logo}}"
  data-blog-cover="{{@blog.cover}}"
  data-blog-navigation="{{@blog.navigation}}"
  data-blog-twitter="{{@blog.twitter}}"
  data-blog-facebook="{{@blog.facebook}}"
  data-blog-permalinks="{{@blog.permalinks}}"
  data-blog-twitter="{{@blog.twitter}}"
  data-blog-posts-per-page="{{@blog.posts_per_page}}"
  data-blog-timezone="{{@blog.timezone}}"
  data-labs-public-api="{{@labs.publicAPI}}"
  data-labs-subscribers="{{@labs.subscribers}}">
  <div
    class="splashscreen"></div>
  <div
    class="to-fetch">
    {{!-- The blog navigation links --}}
    {{navigation}}

    <div class="site-wrapper">

        {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
        {{{body}}}

        {{!-- The tiny footer at the very bottom --}}
        <footer class="site-footer clearfix">
            <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
            <section class="poweredby">Proudly published with <a href="https://ghost.org">Ghost</a></section>
        </footer>

    </div>
  </div>

    <script src="scripts/vendor-bundle.js" data-main="aurelia-bootstrapper"></script>

    {{ghost_foot}}

</body>
</html>
